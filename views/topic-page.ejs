<!doctype html>
<html>
  <head>
    <title><%=forumName%> - Topics</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=forumName%></h1>

    <div class="container">
      <div class="nav1container">
      <ul class="nav">
        <li><div><a href='./'>Home</a></div></li>
        <li><div><a  href='/about'>About</a></div></li>
        <li><div><a href="/viewposts">Posts</a></div></li>
        <li><div><a href="/users">Users</a></div></li>
        <li><div><a href="/topics">Topics</a></div></li>
        <li><div><a href="/addpost">New Post</a></div></li>
        <li><div><a href="/search">Search </a></div></li>
      </ul>
      </div>
      <div class="nav2container">
      <ul class="nav">
        <li><div><a class="active" href='/login'>Login</a></div></li>
        <li><div><a href='/register'>Register</a></div></li>
        <li><div><a href='/logout'>Logout</a></div></li>
      </ul>
      </div>
    </div>

    <h2><a><q><%= topics[0].topic_title %></q></a></h2>
    <h3>DESCRIPTION : <a> <q><i><%= topics[0].topic_description %><i></q></a></h3>

    <table>
      <tr><th>User Name</th><th>Posts Tltle</th><th>Posts content</th></tr>

      <% users.forEach(function(user) { %>
        <tr>
          <td><a href="/user-profile/<%=user.username%>"><%= user.username %></a></td>
          <td><a><%= user.post_title %></a></td>
          <td><a><%= user.post_content %></a></td>
        </tr>
      <% }) %>    
    </table>    
  </body>
</html>