<!doctype html>
<html>
  <head>
    <title><%=forumName%> - Add Post</title>
    <link rel="stylesheet" type="text/css" href="/main.css" />
  </head>
  <body>
    <h1><%=forumName%></h1>

    <div class="container">
      <div class="nav1container">
      <ul class="nav">
        <li><div><a href='./'>Home</a></div></li>
        <li><div><a  href='/about'>About</a></div></li>
        <li><div><a href="/viewposts">Posts</a></div></li>
        <li><div><a href="/users">Users</a></div></li>
        <li><div><a href="/topics">Topics</a></div></li>
        <li><div><a href="/addpost">New Post</a></div></li>
        <li><div><a href="/search">Search </a></div></li>
      </ul>
      </div>
      <div class="nav2container">
      <ul class="nav">
        <li><div><a class="active" href='/login'>Login</a></div></li>
        <li><div><a href='/register'>Register</a></div></li>
        <li><div><a href='/logout'>Logout</a></div></li>
      </ul>
      </div>
    </div>
    
    <h2>Add a Post</h2>

    <form method="POST" action="/postadded">
      <p>Username: <input id="username" type="text" name="username" value="<%=username%>" /></p>
      <p>Topic: <input id="topic" type="text" name="topic" value="<%=topic%>" /></p>
      <p>Title: <input id="title" type="text" name="title" value="<%=title%>" /></p>
      <p>Content: <textarea id="content" type="text" name="content" value="" ><%=content%></textarea></p>
      <input type="submit" value="Add Post" />
    </form>    
    <p class="errormessage"><%=errormessage %></p>
  </body>
</html>